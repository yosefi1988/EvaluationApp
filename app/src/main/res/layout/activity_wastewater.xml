<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fb_background_color"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:padding="20dp"
    android:scrollbarAlwaysDrawVerticalTrack="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        <TextView
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:text="فاضلاب"
            android:textColor="#4267b2"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:paddingTop="50dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorTextGry"
                    android:text="وضعیت سیفون"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold" />

                <cn.refactor.kmpautotextview.KMPAutoComplTextView
                    android:id="@+id/tvAutoCompl"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    app:completionHighlightColor="@color/colorAccent"
                    app:completionTextColor="#80000000"
                    android:layout_margin="3dp"
                    android:hint="@string/select"
                    android:padding="10dp"
                    android:background="@drawable/bg_auto"
                    app:completionTextSize="18sp"
                    app:completionIgnoreCase="true"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutSubscribe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                        android:id="@+id/textViewCheckbox"
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="کد اشتراک"
                        android:textStyle="bold" />
                </LinearLayout>

                <cn.refactor.kmpautotextview.KMPAutoComplTextView
                    android:id="@+id/KMPAutoComplTextViewSubscribe"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_auto"
                    app:completionHighlightColor="@color/colorAccent"
                    android:hint="@string/select"
                    app:completionTextColor="#80000000"
                    app:completionTextSize="18sp"
                    app:completionIgnoreCase="true"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutGhotr"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="قطر سیفون"
                        android:textStyle="bold" />
                </LinearLayout>

                <cn.refactor.kmpautotextview.KMPAutoComplTextView
                    android:id="@+id/KMPAutoComplTextView2"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:completionThreshold="1"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    android:background="@drawable/bg_auto"
                    app:completionHighlightColor="@color/colorAccent"
                    android:hint="@string/select"
                    app:completionTextColor="#80000000"
                    app:completionTextSize="18sp"
                    app:completionIgnoreCase="true"/>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorTextGry"
                    android:text="طول مسیر فاضلاب"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editTextTool"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_search"
                    android:drawablePadding="15dp"
                    android:hint="4"
                    android:inputType="number"
                    android:textDirection="locale"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:padding="10dp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutCount"
                android:layout_width="match_parent"
                android:layout_weight="8"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorTextGry"
                    android:text="تعداد"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/editTextCount"
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_search"
                    android:drawablePadding="15dp"
                    android:hint="4"
                    android:textDirection="locale"
                    android:gravity="start"
                    android:inputType="number"
                    android:textAlignment="viewStart"
                    android:padding="10dp" />

            </LinearLayout>
        </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_search"
            android:text="@string/reg"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>