<?xml version="1.0" encoding="utf-8"?>




<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fb_background_color"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:padding="20dp"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/login_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:text="@string/account"
        android:textColor="#4267b2"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="130dp">

        <EditText
                android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_search"
            android:drawableLeft="@android:drawable/stat_sys_vp_phone_call"
            android:drawablePadding="15dp"
            android:hint="@string/mobile_number"
            android:textDirection="locale"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:padding="16dp" />
        <EditText
                android:id="@+id/editTextPass"
                android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="locale"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:background="@drawable/bg_search"
            android:drawableLeft="@android:drawable/ic_secure"
            android:drawablePadding="15dp"
            android:hint="@string/password"
            android:padding="16dp" />
        <TextView
            android:id="@+id/textViewForgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:textColor="#4267b2"
            android:text="@string/forget_password" />

        <com.google.android.gms.common.SignInButton
                android:id="@+id/submitByGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        <Button
                android:id="@+id/submitBySimCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_search"
                android:text="@string/simcart"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >


        <Button
                android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_search"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>