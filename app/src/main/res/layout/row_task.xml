<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/bg_search"
    android:gravity="right"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:textDirection="ltr"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:background="@drawable/btn_menu"
            android:text="@string/menu"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="start"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:text="نام متقاضی" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:id="@+id/textViewFamily"
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:text="نام خانوادگی" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:text="(" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:id="@+id/textViewRequestType"
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:text="نوع درخواست" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_height="match_parent"
            android:text="-" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:id="@+id/textViewServicesType"
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_marginStart="5dp"
            android:textSize="10dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:text="نوع سرویس" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_height="match_parent"
            android:text=")" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:textDirection="ltr"
        android:orientation="horizontal" >

        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="match_parent"
            android:textSize="11dp"
            android:text="تاریخ تقاضا" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_height="match_parent"
            android:text="-" />
        <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
            android:id="@+id/textViewState"
            android:layout_width="wrap_content"
            android:textDirection="rtl"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="11dp"
            android:layout_height="match_parent"
            android:text="وضعیت منطقه" />
    </LinearLayout>

    <include layout="@layout/_part_horizontal_line"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:textDirection="ltr"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_search"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="#fff" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_search"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textColor="#fff" />
    </LinearLayout>



</LinearLayout>