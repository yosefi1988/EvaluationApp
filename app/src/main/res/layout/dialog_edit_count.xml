<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="right"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:background="@color/fb_background_color"
    android:padding="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="right"
        android:textDirection="rtl"
        android:layoutDirection="rtl"
        android:background="@drawable/circle_border"
        android:padding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorTextGry"
                android:text="کاربری تجاری"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorTextGry"
                android:text="تعداد درخواستی :"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

            <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorTextGry"
                android:text="5"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

            <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextGry"
                android:text="تفکیک کاربر"
                android:textAppearance="?android:attr/textAppearanceSmall"  />

            <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorTextGry"
                android:text="بلی"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />
        </LinearLayout>
        <include
            layout="@layout/_part_horizontal_line"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorTextGry"
                android:text="تعداد ارزیاب :"
                android:layout_marginTop="5dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:hint="5"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textSize="20dp"/>

            <ir.sajjadyosefi.evaluation.classes.wiget.PersianTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorTextGry"
                android:text="تفکیک ارزیاب"
                android:textAppearance="?android:attr/textAppearanceSmall"  />


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >


        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_search"
            android:text="@string/reg"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>


