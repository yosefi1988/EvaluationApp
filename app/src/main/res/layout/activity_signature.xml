<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fb_background_color"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:padding="20dp"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="get last location"
        android:id="@+id/getLastlocation"/>

    <ir.sajjadyosefi.evaluation.classes.wiget.DrawableImageView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/signback"
        android:scaleType="centerCrop"
        android:id="@+id/ChoosenImageView">
    </ir.sajjadyosefi.evaluation.classes.wiget.DrawableImageView>





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textDirection="ltr"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:background="@drawable/btn_search"
                android:text="@string/goBack"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <Button
                android:text="مجدد"
                android:id="@+id/redButton"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:background="@drawable/btn_search"
                android:textAllCaps="false"
                android:textColor="#fff" />


            <Button
                android:text="ذخیره و ادامه"
                android:id="@+id/SavePictureButton"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:background="@drawable/btn_search"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </LinearLayout>



    </LinearLayout>


</RelativeLayout>